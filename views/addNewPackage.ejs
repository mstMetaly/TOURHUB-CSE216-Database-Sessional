    <!--hotel room image -->
    <div class="wrapper">
        <div class="title">HOTEL_ROOM</div>
        <div class="form">
          <form action="/addHotelRoom" method="POST" enctype="multipart/form-data">
            <div class="inputfield">
              <label>HOTEL_ID</label>
              <input type="text" name="hotelId" class="input" />
