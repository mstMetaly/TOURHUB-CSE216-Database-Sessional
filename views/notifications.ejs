  /* Reset CSS */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body, h1, h2, h3, h4, h5, h6, p, ul, li {
    margin: 0;
    padding: 0;
  }
  
  body {
    font-family: Arial, sans-serif;
    background-color: #f5f5f5;

  }
  
  header {
    background-color: #333;
    color: white;
    text-align: center;
    padding: 1em;
  }
  
  .admin-nav {
    background-color: #444;
    color: white;
  }
  
  .admin-nav ul {
    list-style: none;
    display: flex;
    justify-content: center;
    padding: 1em 0;
  }
  
  .admin-nav li {
    margin: 0 1em;
  }
  
  .admin-nav a {
    text-decoration: none;
    color: white;
    transition: color 0.3s, background-color 0.3s; /* Add transition for background color */
    padding: 0.5em 1em; /* Add padding for clickable area */
  }
  
  .admin-nav a:hover,
  .admin-nav a.active { /* Add styles for both hover and active states */
    color: #f5f5f5;
    background-color: #555;
  }
  
  .main-content {
    padding: 2em;
  }
  
  footer {
    text-align: center;
    padding: 1em;
    background-color: #333;
    color: white;
  }
 
  .faq-request {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }
  

  
  .box {
    flex: 0 0 calc(50% - 1rem); 
    background-color: white;
    border: 1px solid #ddd;
    padding: 1rem;
    margin-bottom: 1rem; 
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  }
  

  
  .box img {
    max-width: 100%;
    height: auto;
  }
  
  .box h3 {
    margin-top: 1rem;
    font-size: 1.2rem;
  }
  
  .box .stars {
    margin-top: 0.5rem;
    color: #f39c12; 
  }
  
  .box .price {
    margin-top: 0.5rem;
    font-weight: bold;
    font-size: 1.2rem;
  }
  
  .box h2 {
    font-size: 1rem;
    margin-top: 0.5rem;
  }
  
  .box .btn {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background-color: #333;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }
  
  .box .btn:hover {
    background-color: #555;
  }

  .cancel-details,
  .faq-details,
  .log-details{
    padding-top: 3rem;
    padding-bottom: 5rem;
    justify-content: center;
    text-align: center;
    width: 850px;
    align-items: center;
    margin-left: 350px;
  }
  h3{
    align-items: center;
    text-align: center;
    font-size: 2rem;
    font-weight: bold;
  }


  


