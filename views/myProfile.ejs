<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Profile</title>
  <link rel="stylesheet" href="/styles/myProfile-style.css">
</head>
<body>
  <header>
    <h1>My Profile</h1>
    <nav>
      <ul>
        <li><a href="#profile">Profile Info</a></li>
        <li><a href="#previous-tour">Previous Tour History</a></li>
        <li><a href="#current-tour">Current Tour</a></li>
        <li><a href="#update">Update Info</a></li>
      </ul>
    </nav>
  </header>
  
  <main>
    <section id="profile" class="profile-section">
      <div class="profile-picture">
        <img src="/metaly.jpg" alt="Profile Picture">
        <input type="file" id="profile-picture-input" accept="image/*">
        <button class="change-picture-button">Change Picture</button>
      </div>
      <div class="profile-info">
        <!-- Profile information as mentioned earlier -->
      </div>
    </section>
    
    <section id="previous-tour" class="tour-history">
      <h2>Previous Tour History</h2>
      <!-- Display previous tour history here -->
    </section>
    
    <section id="current-tour" class="current-tour">
      <h2>Current Tour</h2>
      <!-- Display current tour information here -->
    </section>
    
    <section id="update" class="update-section">
      <div class="profile-picture">
        <img src="" alt="Profile Picture">
        <button class="change-picture-button">Change Picture</button>
      </div>
      <div class="profile-info">
        <button class="expand-form-button">Update Info</button>
        <form id="update-profile-form" class="hidden-form">
          <!-- Update profile form with fields mentioned earlier -->
          <label for="name">Name</label>
          <input type="text" id="name" name="name" placeholder="Your Name">
          
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Your Email">
          
          <label for="nid">NID</label>
          <input type="text" id="nid" name="nid" placeholder="Your NID">
          
          <label for="address">Address</label>
          <textarea id="address" name="address" placeholder="Your Address"></textarea>
          
          <label for="gender">Gender</label>
          <select id="gender" name="gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
          </select>
          
          <label for="nationality">Nationality</label>
          <input type="text" id="nationality" name="nationality" placeholder="Your Nationality">
          
          <button type="submit">Update Profile</button>
          <a href="/deleteProfile" class="delete-button">Delete Profile</a>
        </form>
      </div>
    </section>
  </main>
  
  <script src="/script/myProfile-script.js"></script>
</body>
</html>
